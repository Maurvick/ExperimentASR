<Window x:Class="ExperimentASR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExperimentASR"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        ui:WindowHelper.UseModernWindowStyle="True"
        TextOptions.TextFormattingMode="Display" 
        Title="Transcription Window" Height="450" Width="800">

    <Window.Resources>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="10, 13, 10, 10"/>
            <Setter Property="IsChecked" Value="True"/>
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!-- Status Bar docked to the Bottom (Kept Global) -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="blockStatus" Text="Ready" />
            </StatusBarItem>
            <Separator />
            <StatusBarItem>
                <TextBlock Text="Item Count: 0" />
            </StatusBarItem>
        </StatusBar>

        <!-- Main Content: TabControl is now the top-level container in the DockPanel -->
        <TabControl>
            <TabItem Header="Home">
                <!-- DockPanel added to stack Menu above the Grid within the Tab -->
                <DockPanel LastChildFill="True">
                    <!-- Menu Bar moved inside the Home Tab -->
                    <Menu DockPanel.Dock="Top">
                        <MenuItem Header="_File">
                            <MenuItem Header="_Import" />
                            <Separator />
                            <MenuItem Header="E_xit" />
                        </MenuItem>
                        <MenuItem Header="_Edit" />
                        <MenuItem Header="_Help" />
                    </Menu>

                    <!-- Transcription UI -->
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- File Selection -->
                            <RowDefinition Height="Auto"/>
                            <!-- Buttons -->
                            <RowDefinition Height="*"/>
                            <!-- Output -->
                        </Grid.RowDefinitions>

                        <!-- Row 0: File Selection -->
                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="AudioPath" Width="300" IsReadOnly="True" VerticalContentAlignment="Center"/>
                            <Button Grid.Column="1" Content="Обрати..." Width="100" Margin="10,0,0,0" Click="SelectFile_Click"/>
                        </Grid>

                        <!-- Row 1: Action Buttons -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                            <Button x:Name="btnStartTranscribe" 
                                    Content="Розпізнати" 
                                    Width="100" Height="35" 
                                    Click="Transcribe_Click"/>
                            <Button x:Name="btnCancelTranscribe" 
                                    Content="Відмінити" 
                                    Width="100" Height="35" 
                                    Margin="10,0,0,0" 
                                    Click="Transcribe_Click"/>
                        </StackPanel>

                        <!-- Row 2: Output -->
                        <TextBox Grid.Row="2"
                                 x:Name="OutputBox"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 AcceptsReturn="True" 
                                 IsReadOnly="True"/>
                    </Grid>
                </DockPanel>
            </TabItem>

            <TabItem Header="Settings">
                <Grid Background="White">
                    <TextBlock Text="Settings Page" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center" 
                               Foreground="Gray" 
                               FontSize="24"/>
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>