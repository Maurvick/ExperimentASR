<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExperimentASR"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:ui1="http://schemas.lepo.co/wpfui/2022/xaml" xmlns:Models="clr-namespace:ExperimentASR.Models" x:Class="ExperimentASR.MainWindow"
        mc:Ignorable="d"
        ui:WindowHelper.UseModernWindowStyle="True"
        TextOptions.TextFormattingMode="Display" 
        Title="MainWindow" Height="720" Width="1280" Loaded="Window_Loaded" Closing="Window_Closing">
	<Window.Resources>
		<SolidColorBrush x:Key="AccentBrush" Color="#0057B7"/>
		<SolidColorBrush x:Key="AccentLightBrush" Color="#FFD700"/>
		<!-- Styles for Big Play Button -->
		<Style x:Key="RoundButtonStyle" TargetType="{x:Type Button}">
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type Button}">
						<Border Background="{TemplateBinding Background}" CornerRadius="60">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Window.Resources>

	<DockPanel LastChildFill="True">
		<StatusBar DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
			<StatusBarItem HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="Auto"/>
					</Grid.ColumnDefinitions>

					<StackPanel Grid.Column="0" Orientation="Horizontal">
						<TextBlock x:Name="StatusText" Text="Ready" VerticalAlignment="Center"/>

						<Border Width="1" Background="#FFCCCCCC" Margin="10,2"/>

						<ProgressBar x:Name="progressTranscript" Height="10" Width="100" VerticalAlignment="Center"/>
					</StackPanel>

					<StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
						<TextBlock x:Name="textAsrLocation" Text="ASR path" VerticalAlignment="Center"/>

						<Border Width="1" Background="#FFCCCCCC" Margin="10,2"/>

						<TextBlock x:Name="txtGPUAcceleration" Text="GPUAcceleration" VerticalAlignment="Center"/>

						<Border Width="1" Background="#FFCCCCCC" Margin="10,2"/>

						<TextBlock x:Name="txtFFMPEGPath" Text="FFMPEG" VerticalAlignment="Center"/>

						<Border Width="1" Background="#FFCCCCCC" Margin="10,2"/>

						<TextBlock x:Name="txtPythonExecutable" Text="PythonExecutable" VerticalAlignment="Center"/>

						<Border Width="1" Background="#FFCCCCCC" Margin="10,2"/>
						<TextBlock x:Name="txtSqlConnection" Text="SqlConnection" VerticalAlignment="Center"></TextBlock>
					</StackPanel>
				</Grid>
			</StatusBarItem>
		</StatusBar>

		<Menu DockPanel.Dock="Top">
			<MenuItem Header="_File">
				<MenuItem Header="_Import" />
				<Separator />
				<MenuItem Header="_Exit" Click="menuExit_Click" />
			</MenuItem>

			<MenuItem Header="_Edit">
				<MenuItem Header="_Undo" />
				<MenuItem Header="_Redo" />
				<Separator />
				<MenuItem Header="_Cut" />
				<MenuItem Header="_Copy" />
				<MenuItem Header="_Paste" />
			</MenuItem>

			<MenuItem Header="_Tools" >
				<MenuItem Header="_Settings" Click="menuSettings_Click" />
				<MenuItem Header="_Benchmark" Click="menuBenchmark_Click" />
				<MenuItem Header="_Logs" Click="menuLogs_Click"/>
			</MenuItem>

			<MenuItem Header="_Help">
				<MenuItem Header="_About" Click="menuAbout_Click" />
			</MenuItem>
		</Menu>

		<Grid Margin="10">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="300"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="280"/>
			</Grid.ColumnDefinitions>

			<Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1"
            CornerRadius="8" Padding="16" Margin="0,0,10,0">

				<StackPanel x:Name="panelTranscriptOptions" VerticalAlignment="Center" Height="536">

					<Button x:Name="btnStartTranscribe" Height="120" Width="120" Margin="0,10,0,0"
                    Style="{StaticResource RoundButtonStyle}"
                    Background="{StaticResource AccentBrush}"
                    Foreground="White" FontSize="48" FontWeight="Bold"
                    Content="▶" 
                    Click="Transcribe_Click"/>

					<TextBlock x:Name="blockStartTranscription" Text="Start transcription" 
                       HorizontalAlignment="Center" FontSize="16" Margin="0,10,0,10"/>

					<TextBlock x:Name="blockImportLocalFile" 
                       Margin="0,10,0,5" Text="Import local file"/>

					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="Auto"/>
						</Grid.ColumnDefinitions>
						<TextBox x:Name="txtAudioFilePath" IsReadOnly="True" VerticalContentAlignment="Center"/>
						<Button x:Name="btnFileSelect" Grid.Column="1" Content="📁" Width="40" Margin="5,0,0,0" Click="SelectFile_Click"/>
					</Grid>

					<StackPanel VerticalAlignment="Stretch">
						<StackPanel Orientation="Horizontal" Margin="0,10,0,0">

							<Button x:Name="btnCancelTranscribe" 
                        Content="Cancel Transcription" 
                        Background="#D32F2F" 
                        Foreground="White" 
                        Click="Transcribe_Click"/>

							<TextBlock x:Name="linkMoreOptions1" VerticalAlignment="Center" Margin="10,0,0,0" IsEnabled="False">            
                        <Hyperlink x:Name="linkMoreOptions" Click="MoreOptions_Click">
                            More options...
                        </Hyperlink>
							</TextBlock>

						</StackPanel>
					</StackPanel>

					<Grid Margin="10">
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="*"/>
						</Grid.RowDefinitions>

						<StackPanel Orientation="Horizontal" Margin="0,0,0,10"/>

						<DataGrid x:Name="QueueGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Margin="-10,0,10,0">
							<DataGrid.Columns>
								<DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="100"/>
								<DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
							</DataGrid.Columns>
						</DataGrid>
					</Grid>

					<Separator Margin="0,20"/>

					<TextBlock FontWeight="SemiBold" Height="21"><Run Text="ASR Models"/><LineBreak/><Run/></TextBlock>
					<ComboBox x:Name="comboAsrModels" Margin="0,10,0,10" Width="150" Height="35">
						<ComboBoxItem Content="whisper"/>
						<ComboBoxItem Content="google_speech_to_text"/>
						<ComboBoxItem Content="deepspeech"/>
						<ComboBoxItem Content="vosk"/>
					</ComboBox>

					<StackPanel VerticalAlignment="Stretch">
						<StackPanel Orientation="Horizontal" Margin="0,10,0,0">
							<RadioButton x:Name="radioNative" Content="Native" IsChecked="True" Margin="0,0,10,0" Width="76"/>
							<RadioButton x:Name="radioPython" Content="Python"/>
						</StackPanel>
					</StackPanel>
				</StackPanel>
			</Border>

			<Border x:Name="borderTranscriptOutput" Grid.Column="1" BorderBrush="Gray" BorderThickness="1"
            CornerRadius="8" Padding="20" Margin="5,0,5,0">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="*"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>

					<ScrollViewer VerticalScrollBarVisibility="Auto">
						<TextBox x:Name="boxTranscriptOutput" 
                         TextWrapping="Wrap" AcceptsReturn="True"
                         FontSize="18" 
                         Background="Transparent"
                         BorderThickness="0" IsReadOnly="True"
                         Text="Transcript result will appear here..." Height="500" Width="625" />
					</ScrollViewer>

					<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
						<Button x:Name="btnCopy" Content="Copy" Margin="0,0,5,0" Click="btnCopy_Click"/>
						<Button x:Name="btnSaveTxt" Content="Save TXT" Margin="0,0,5,0" Click="btnSaveTxt_Click"/>
						<Button x:Name="btnSaveSrt" Content="Save SRT" Click="btnSaveSrt_Click" IsEnabled="False"/>
						<Button x:Name="btnSummarizeText" Content="Summarize"  Margin="5,0,0,0" 
                        IsEnabled="False" Click="btnSummarizeText_Click"></Button>
					</StackPanel>
				</Grid>
			</Border>

			<Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1"
            CornerRadius="8" Padding="16" Margin="10,0,0,0">
				
			</Border>

		</Grid>
	</DockPanel>
</Window>