<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpeechMaster"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:ui1="http://schemas.lepo.co/wpfui/2022/xaml" xmlns:Models="clr-namespace:SpeechMaster.Models" x:Class="SpeechMaster.MainWindow"
        mc:Ignorable="d"
        ui:WindowHelper.UseModernWindowStyle="True"
        TextOptions.TextFormattingMode="Display" 
        Title="Transcription" Height="720" Width="1280" Loaded="Window_Loaded" Closing="Window_Closing">
	<Window.Resources>
		<SolidColorBrush x:Key="AccentBrush" Color="#0057B7"/>
		<SolidColorBrush x:Key="AccentLightBrush" Color="#FFD700"/>
		<!-- Styles for Big Play Button -->
		<Style x:Key="RoundButtonStyle" TargetType="{x:Type Button}">
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type Button}">
						<Border Background="{TemplateBinding Background}" CornerRadius="60">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Window.Resources>

	<DockPanel LastChildFill="True">
		<StatusBar DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
			<StatusBarItem HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="Auto"/>
					</Grid.ColumnDefinitions>

					<StackPanel Grid.Column="0" Orientation="Horizontal">
						<TextBlock x:Name="StatusText" Text="Ready" VerticalAlignment="Center"/>

						<Border Width="1" Background="#FFCCCCCC" Margin="10,2"/>

						<ProgressBar x:Name="progressTranscript" Height="10" Width="100" VerticalAlignment="Center"/>
					</StackPanel>

					<StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
						<TextBlock x:Name="textAsrLocation" Text="ASR path" VerticalAlignment="Center" Visibility="Hidden"/>

						<Border Width="1" Background="#FFCCCCCC" Margin="10,2"/>

						<TextBlock x:Name="txtGPUAcceleration" Text="GPUAcceleration" VerticalAlignment="Center"/>

						<Border Width="1" Background="#FFCCCCCC" Margin="10,2"/>

						<TextBlock x:Name="txtFFMPEGPath" Text="FFMPEG" VerticalAlignment="Center"/>

						<Border Width="1" Background="#FFCCCCCC" Margin="10,2"/>

						<TextBlock x:Name="txtPythonExecutable" Text="PythonExecutable" VerticalAlignment="Center"/>

						<Border Width="1" Background="#FFCCCCCC" Margin="10,2"/>
						<TextBlock x:Name="txtSqlConnection" Text="SqlConnection" VerticalAlignment="Center"></TextBlock>
					</StackPanel>
				</Grid>
			</StatusBarItem>
		</StatusBar>

		<Menu DockPanel.Dock="Top">
			<MenuItem Header="_File">
				<MenuItem Header="_Import" />
				<Separator />
				<MenuItem Header="_Exit" Click="MenuExit_Click" />
			</MenuItem>

			<MenuItem Header="_Tools" >
				<MenuItem Header="_Settings" Click="MenuSettings_Click" />
				<MenuItem Header="_Benchmark" Click="MenuBenchmark_Click" />
				<MenuItem Header="_Download Media" Click="MenuVideoDownloader_Click"/>
				<MenuItem Header="_Logs" Click="MenuLogs_Click"/>
			</MenuItem>

			<MenuItem Header="_Help">
				<MenuItem Header="_About" Click="MenuAbout_Click" />
			</MenuItem>
		</Menu>

        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
            BorderBrush="Gray" 
            BorderThickness="1"
            CornerRadius="8" 
            Padding="16" 
            Margin="0,0,10,0">

                <StackPanel x:Name="panelTranscriptOptions" VerticalAlignment="Center">
                    <Button x:Name="btnStartTranscribe" Height="120" Width="120" Margin="0,10,0,0"
                    Style="{StaticResource RoundButtonStyle}"
                    Background="{StaticResource AccentBrush}"
                    Foreground="White" FontSize="48" FontWeight="Bold"
                    Content="▶" 
                    Click="BtnStartTranscribe_Click"/>

                    <TextBlock x:Name="blockStartTranscription" Text="Start transcription" 
                       HorizontalAlignment="Center" FontSize="16" Margin="0,10,0,10" FontWeight="Bold"/>

                    <TextBlock x:Name="blockImportLocalFile" 
                       Margin="0,10,0,5" Text="Import local file"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="txtAudioFilePath" IsReadOnly="True" VerticalContentAlignment="Center"/>
                        <Button x:Name="btnFileSelect" Grid.Column="1" Content="📁" Width="40" Margin="5,0,0,0" Click="BtnSelectFile_Click"/>
                    </Grid>

                    <Separator Height="20"/>

                    <Grid Margin="0,10,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="blockQueue" Text="Transcription Queue" Margin="0,0,0,10" Grid.Row="0" FontSize="16"/>

                        <DataGrid x:Name="QueueGrid" Grid.Row="1" AutoGenerateColumns="False" 
                          IsReadOnly="True" Height="200"
                          ToolTip="Displays current audio files queued for transcription">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="*"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </StackPanel>
            </Border>

            <Border x:Name="borderTranscriptOutput" 
            Grid.Column="1" 
            BorderBrush="Gray" 
            BorderThickness="1"
            CornerRadius="8" 
            Padding="20" 
            Margin="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="0">
                        <TextBox x:Name="boxTranscriptOutput" 
                         TextWrapping="Wrap" AcceptsReturn="True"
                         FontSize="18" 
                         Background="Transparent"
                         BorderThickness="0" IsReadOnly="True"
                         Text="Transcript result will appear here..." 
                         HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    </ScrollViewer>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button x:Name="btnCopy" Content="Copy" Margin="0,0,5,0" 
                        Click="BtnCopyText_Click" ToolTip="Copies transcription to your text buffer"/>
                        <Button x:Name="btnSaveTxt" Content="Save TXT" Margin="0,0,5,0" 
                        Click="BtnSaveTxt_Click" ToolTip="Opens file dialog to save transcript locally"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Window>