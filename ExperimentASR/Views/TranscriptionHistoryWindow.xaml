<Window x:Class="ExperimentASR.Views.TranscriptionHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExperimentASR.Views"
        mc:Ignorable="d"
        Title="TranscriptionHistoryWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="BenchmarkDataGrid" AutoGenerateColumns="False" Margin="0,0,0,20">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Модель" Binding="{Binding ModelName}" Width="*"/>
                <DataGridTextColumn Header="WER (%)" Binding="{Binding AverageWer, StringFormat={}{0:F2}%}" Width="80"/>
                <DataGridTextColumn Header="RTF" Binding="{Binding AverageRtf, StringFormat={}{0:F3}x}" Width="70"/>
                <DataGridTextColumn Header="Тестів" Binding="{Binding TestsCount}" Width="70"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
