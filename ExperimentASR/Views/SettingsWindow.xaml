<Window x:Class="ExperimentASR.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:ui="http://schemas.modernwpf.com/2019"
		ui:WindowHelper.UseModernWindowStyle="True"
        Title="Settings" Height="350" Width="360" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Width="120" VerticalAlignment="Center">ASR Engine:</TextBlock>
            <ComboBox x:Name="comboAsrEngine" Width="200">
                <ComboBoxItem Content="whisper"/>
                <ComboBoxItem Content="vosk"/>
                <ComboBoxItem Content="silero"/>
            </ComboBox>
        </StackPanel>

		<StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,8">
			<TextBlock Width="120" VerticalAlignment="Center" FontSize="10">Whisper model size:</TextBlock>
			<ComboBox x:Name="comboWhisperSize" Width="200">
				<ComboBoxItem Content="tiny"/>
				<ComboBoxItem Content="base"/>
				<ComboBoxItem Content="small"/>
				<ComboBoxItem Content="medium"/>
				<ComboBoxItem Content="large"/>
			</ComboBox>
		</StackPanel>

		<StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,8">
			<TextBlock Width="120" VerticalAlignment="Center">Implementation:</TextBlock>
			<ComboBox x:Name="comboModelImplementation" Width="200">
				<ComboBoxItem Tag="native" Content="Native (.NET) Libraries"/>
				<ComboBoxItem Tag="python" Content="Python Libraries"/>
			</ComboBox>
		</StackPanel>

		<StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,0,0,8">
			<TextBlock Width="120" VerticalAlignment="Center">Audio language:</TextBlock>
			<TextBox x:Name="txtAudioLanguage" Width="200" Height="90" />
		</StackPanel>

		<StackPanel Orientation="Horizontal" Grid.Row="4" Margin="0,0,0,8">
			<TextBlock Width="120" VerticalAlignment="Center" FontSize="10">
				Whisper version: None
			</TextBlock>
			<Button x:Name="BtnOpenWhisperFolder" Grid.Column="1" Content="📁" 
				Width="40" Margin="5,0,0,0" Click="BtnOpenWhisperFolder_Click"/>
			<TextBlock Width="120" Margin="5,0,0,0" VerticalAlignment="Center" FontSize="10">
				Vosk version: None
			</TextBlock>
			<Button x:Name="BtnOpenVoskFolder" Grid.Column="1" Content="📁" 
				Width="40" Margin="5,0,0,0" Click="BtnOpenVoskFolder_Click"/>
		</StackPanel>

		<StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
			<Button x:Name="btnReset" Width="80" Margin="0,0,8,0" Click="BtnReset_Click">Reset</Button>
			<Button x:Name="btnCancel" Width="80" Margin="0,0,8,0" Click="BtnCancel_Click">Cancel</Button>
			<Button x:Name="btnSave" Width="80" Click="BtnSave_Click">Save</Button>
		</StackPanel>
	</Grid>
</Window>