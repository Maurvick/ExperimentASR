<Window x:Class="ExperimentASR.Views.BenchmarkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExperimentASR.Views"
        mc:Ignorable="d"
        Title="BenchmarkWindow" Height="450" Width="800">
    <Grid>
        <Border BorderBrush="Gray" BorderThickness="1"
        CornerRadius="8" Padding="16" Margin="10,10,10,10">
            <StackPanel Margin="0,0,0,47">
                <TextBlock x:Name="blockWaveform" Text="Waveform" FontWeight="SemiBold" Margin="0,0,0,10"/>

                <Border Height="120" 
                CornerRadius="8">
                    <TextBlock x:Name="blockWaveformVisualizer" Text="Waveform Visualizer" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <TextBlock x:Name="blockTimer" Text="Timer:" Margin="0,20,0,0"/>
                <TextBlock x:Name="blockTime" Text="00:00:00" FontSize="24" FontWeight="Bold"/>

                <TextBlock x:Name="blockAccuracyWer" Text="Accuracy (WER):" Margin="0,20,0,0"/>
                <TextBlock x:Name="blockAccuracyPercent" Text="-- %" FontSize="20" Foreground="#4CAF50"/>
                <Grid Height="100">
                    <Button x:Name="btnBenchmark" Content="Benchmark" Click="btnBenchmark_Click" Margin="10,10,0,0" VerticalAlignment="Top"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
